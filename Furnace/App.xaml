<Application
    x:Class="Furnace.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Furnace">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="Themes/AppThemeResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <AcrylicBrush x:Key="NavigationViewTopPaneBackground"
                          BackgroundSource="Backdrop" TintColor="{ThemeResource SystemAccentColor}" TintOpacity=".2"/>
            <AcrylicBrush x:Key="AccentAcrylic"
                          BackgroundSource="Backdrop" TintColor="{ThemeResource SystemAccentColor}" TintOpacity=".2"/>
            <AcrylicBrush x:Key="RegionAcrylic"
                          BackgroundSource="Backdrop" TintColor="{ThemeResource RegionColor}" TintOpacity=".5"/>
            <AcrylicBrush x:Key="SystemControlPageBackgroundBaseMediumBrush"
                          BackgroundSource="Backdrop" TintColor="{ThemeResource RegionColor}" TintOpacity=".5"/>
            
        </ResourceDictionary>
    </Application.Resources>


</Application>
